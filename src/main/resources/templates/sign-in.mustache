{{>layout/header}}
<style>
    body {
        background: #f8f8f8;
        padding: 60px 0;
    }

    #login-form > div {
        margin: 15px 0;
    }
</style>

<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-success">
            <h1>로그인</h1>
            <div class="panel-heading">
                <div class="panel-title">환영합니다!</div>
            </div>
            <div class="panel-body">
                <form id="login-form">
                    <div>
                        <input type="email" class="form-control" id="email" name="email" placeholder="이메일 입력하세요." autofocus>
                    </div>
                    <div>
                        <input type="password" class="form-control" id="password" name="password" placeholder="패스워드를 입력하세요.">
                    </div>
                    <div>
                        <button type="button" id="sign-in" class="form-control btn btn-primary">로그인</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}
